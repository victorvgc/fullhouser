<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AccentButton" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_main_button</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FormErrorMsg" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/red_900</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressBarSubmit" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/green_700</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="DefaultTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CardInput" parent="Widget.AppCompat.EditText">
        <item name="android:hint">@string/card_hint</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>